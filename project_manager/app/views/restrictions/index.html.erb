<div class="ui-widget-content ui-corner-all form">
  <div class="ui-widget-header ui-corner-all">
    <h1>Listing Restrictions</h1>
  </div>

<table>
  <tr>
    <th>Number</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

<% @restrictions.each do |restriction| %>
  <tr>
    <td><%= restriction.number %></td>
    <td><%= restriction.description %></td>
    <td><%= link_to 'Show', restriction %></td>
    <td><%= link_to 'Edit', edit_restriction_path(restriction) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Restriction', new_restriction_path %>
</div>